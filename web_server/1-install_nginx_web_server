#!/usr/bin/env bash
# Web servers are the piece of software generating and serving HTML pages, letâ€™s install one!

# install nginx
apt-get -y update
apt-get install -y nginx

# configuration for default server or building server block
printf %s "server {
        listen 80 default_server;
        listen [::]:80 default_server;

        root /etc/nginx/html;
        index index.html;

        server_name _;

        location / {
                try_files \$uri \$uri/ =404;
        }
}
"
 > /etc/nginx/sites-available/default
# enabling server block
sudo ln -s /etc/nginx/sites-available/default /etc/nginx/sites-enabled/
# create the default site file directory for your site
sudo mkdir -p /etc/nginx/html
# change ownership to default user
sudo chown -R $USER:$USER /etc/nginx/html
# echo string to default webpage
echo "Holberton School" > /etc/nginx/html/index.html
# restart nginx using service nginx restart
service nginx restart
