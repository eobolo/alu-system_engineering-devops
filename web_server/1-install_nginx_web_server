#!/usr/bin/env bash
# servers are the piece of software generating and serving HTML pages, letâ€™s install one!

# install nginx
sudo apt-get -y update
sudo apt-get install -y nginx

# create the default site file directory for your site
sudo mkdir -p /var/www/html
# change ownership to default user
sudo chown -R $USER:$USER /var/www/html
# echo string to default webpage
sudo echo "Holberton School" > /var/www/html/index.html
# give sites-available the current user ownership
sudo chown -R $USER:$USER /etc/nginx/sites-available/
# configuration of server block
sudo echo "server {
        listen 80 default_server;
        listen [::]:80 default_server;

        root /var/www/html/;
        index index.html;

        server_name _;

        location / {
                try_files \$uri \$uri/ =404;
        }
}
" > /etc/nginx/sites-available/default
echo "Holberton School"
# restart nginx using service nginx restart
# service nginx restart
